{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "dashboard"],
  "testRunner": "jest",
  "jest": {
    "configFile": "jest.config.js"
  },
  "mutate": [
    "server/controllers/**/*.js",
    "server/middleware/**/*.js",
    "!server/controllers/**/*.test.js",
    "!server/middleware/**/*.test.js"
  ],
  "mutator": {
    "name": "javascript",
    "excludedMutations": [
      "ArrayDeclaration",
      "ArrowFunction",
      "BlockStatement"
    ]
  },
  "coverageAnalysis": "perTest",
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 60
  },
  "timeoutMS": 15000,
  "timeoutFactor": 1.5,
  "maxConcurrentTestRunners": 4,
  "plugins": [
    "@stryker-mutator/jest-runner"
  ],
  "dashboard": {
    "project": "github.com/yourusername/fullstack-mern-app",
    "version": "master",
    "module": "backend"
  }
}