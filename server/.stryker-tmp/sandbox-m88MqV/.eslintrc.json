{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "curly": "error",
    "camelcase": ["warn", { "properties": "always" }],
    "no-duplicate-imports": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "coverage/",
    "*.config.js"
  ]
}